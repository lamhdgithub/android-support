<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/size_20"
    tools:context=".views.widget.dialog.ConfirmNoticeDialog">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm your arrived"
        android:textSize="@dimen/text_size_16"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtBody"
        style="@style/TextAppearance.Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_20"
        android:lineSpacingExtra="2dp"
        android:text="You arrived 235 Old Cleveland Rd, Coorparoo QLD 4151 at 08:33"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_20"
        android:gravity="end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/offset_horizontal"
            android:background="?selectableItemBackground"
            android:text="@string/btn_cancel"
            android:textAllCaps="false"
            android:textColor="@color/grey" />

        <Button
            android:id="@+id/btnDismiss"
            style="@style/AppTheme.Button"
            android:layout_width="wrap_content"
            android:drawableEnd="@drawable/ic_button_check_filled"
            android:drawablePadding="@dimen/size_10"
            android:text="@string/btn_confirm" />
    </LinearLayout>

</LinearLayout>